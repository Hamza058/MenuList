
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
	<script type="text/javascript">
		function loadCategories() {
			$("#loading").show();
			$.ajax({
				type: "Get",
				url: "/Category/Get",
				success: function (data) {
					$("#values").html("");
					$.each(data, function (index, item) {
						console.log(item);
						let comment = `
											<tr>
												<td>${index}</td>
												<td>${item.categoryName}</td>
												<td><i onclick="Delete(${item.categoryId})" type="button" class="bx bx-trash" /></td>
											</tr>
										`;
						$("#values").append(comment);
					});
					$("#loading").hide();
				},
				error: function (e) {
					console.log(e);
				}
			})
		}
		loadCategories();
		$("#btnSave").click(function () {
			var name = $("#name").val();

			var jsonData = { "categoryName": name };

			$.ajax({
				type: "POST",
				url: "/Category/Add",
				data: jsonData,
				success: function (data) {
					console.log("Eklendi");
					loadCategories();
				},
				error: function (e) {
					console.log(e);
				}
			})
		})
		function Delete(id) {
			$.ajax({
				type: "Delete",
				url: "/Category/Delete",
				data: { id: id },
				success: function (data) {
					loadCategories();
				},
				error: function (e) {
					console.log(e);
				}
			})
		}
	</script>
}

<h1>Kategoriler</h1>
<table class="table table-primary text-center">
	<thead>
		<tr>
			<th>Id</th>
			<th>Kategori</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="values">
	</tbody>
</table>
<div id="loading" class="text-center">
	<div class="spinner-border" role="status">
		<span class="sr-only"></span>
	</div>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategory">Ürün Ekle</button>
<div class="modal" id="addCategory" tabindex="-1" aria-labelledby="addCategorytLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5">Kategori Bilgileri</h1>
			</div>
			<div>
				<div class="modal-body">
					<input type="text" id="name" class="form-control mb-2" placeholder="Kategori adı" />
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-success" data-bs-dismiss="modal" id="btnSave">Kaydet</button>
				<button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
			</div>
		</div>
	</div>
</div>