@using EntityLayer.Concrete
@model List<Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        function loadProducts() {
            $("#loading").show();
            $.ajax({
                type: "Get",
                url: "/Category/GetWithProduct/",
                data: { name: "" },
                success: function (data) {
                    $.each(data, function (index, item) {
                        let category = `
                                        <div class="col dropdown">
                                            <details id="${item.categoryId}" class="akerdion border-bottom">
                                                    <summary class="ozet text-center">${item.categoryName}</summary>
                                            </details>
                                        </div>
                        `;
                        $("#categories").append(category);
                        $.each(item.products, function (index, item) {
                            console.log(item);
                            let products = `
                                        <div class="container" style="word-wrap: break-word">
                                            <div class="row-cols-fluid-4 text-center mb-1 items">
                                                <div class="col-lg-12">
                                                    <img src="/img/${item.image}" class="border border-dark m-2" width="80%" />
                                                </div>
                                                <div class="col-lg-12 border-bottom border-dark pb-2"><h4>${item.productName}</h4></div>
                                                <div class="col-lg-12 text-start text-start pt-1 ps-1 pe-1">${item.description}</div>
                                                <div class="col-lg-12 text-end pe-2">${item.price}</div>
                                            </div>
                                        </div>
                            `;
                            $(`#${item.categoryId}`).append(products);
                        });
                    });
                    $("#loading").hide();
                },
                error: function (e) {
                    console.log(e);
                }
            })
        }
        loadProducts();
    </script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="icon" type="image/x-icon" href="~/img/logo.jpeg" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="col-lg-12 text-center p-3">
        <a asp-controller="User" asp-action="Login">
            <img class="rounded-circle" src="~/img/logo.jpeg" width="45%" />
        </a>
    </div>
    <div class="col-12 mt-2">
        <div id="categories" class="rowrow-cols-fluid-2 p-2">
            <div id="loading" class="text-center">
                <div class="spinner-border text-light" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>