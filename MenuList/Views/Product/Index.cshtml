@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
	<script type="text/javascript">
		function loadComments() {
			$("#loading").show();
			$.ajax({
				type: "Get",
				url: "/Product/Get",
				success: function (data) {
					$("#products").html("");
					$.each(data, function (index, item) {
						console.log(item);
						let comment = `
								<div class="row-cols-fluid-4 text-center">
									<img src="${item.image}" class="rounded-circle border border-dark m-2" width="50%" />
									<div class="col-lg-12 border-bottom border-dark mb-1">${item.productName}</div>
									<div class="col-lg-12 text-start text-start ps-1 pe-1">${item.description}</div>
									<div class="col-lg-12 text-end pe-2">${item.price}</div>
								</div>
									`;
						$("#products").append(comment);
					});
					$("#loading").hide();
				},
				error: function (e) {
					console.log(e);
				}
			})
		}
		loadComments();
	</script>
}
<h1>Index</h1>

<div id="products" class="col-sm border border-dark mb-5"></div>
<div id="loading" class="text-center">
	<div class="spinner-border" role="status">
		<span class="sr-only"></span>
	</div>
</div>
