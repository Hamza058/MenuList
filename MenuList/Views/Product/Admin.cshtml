
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script type="text/javascript">
		function loadProducts() {
			$("#loading").show();
			$.ajax({
				type: "Get",
				url: "/Product/Get",
				success: function (data) {
					$("#values").html("");
					$.each(data, function (index, item) {
						console.log(item);
						let comment = `
									<tr>
										<td>${index}</td>
										<td>${item.productName}</td>
										<td>${item.description}</td>
										<td>${item.price}</td>
										<td>${item.categoryId}
										<td><img src="${item.image}" class="rounded-circle border border-dark m-2" width="50%" /></td>
										<td><i onclick="Delete(${item.productId})" type="button" class="bx bx-trash" /></td>
									</tr>
								`;
						$("#values").append(comment);
					});
					$("#loading").hide();
				},
				error: function (e) {
					console.log(e);
				}
			})
		}
		loadProducts();
        $("#btnSave").click(function () {
            var name = $("#name").val();
            var description = $("#description").val();
			var price = $("#price").val();
            var file = document.getElementById("image").files[0]['name'];

            var jsonData = { "productName": name, "description": description, "price": price, "image": file, "categoryId": 1 };

			$.ajax({
				type: "POST",
				url: "/Product/Add",
				data: jsonData,
				success: function (data) {
                    console.log("Eklendi");
					loadProducts();
				},
				error: function (e) {
					console.log(e);
				}
			})
		})
		function Delete(id) {
			$.ajax({
				type: "Delete",
				url: "/Product/Delete",
				data: { id: id },
				success: function (data) {
					loadProducts();
				},
				error: function (e) {
					console.log(e);
				}
			})
		}
    </script>
}

<h1>Ürünler</h1>
<table class="table table-primary text-center">
	<thead>
		<tr>
			<th>Id</th>
			<th>Ürün Ad</th>
			<th>Ürün Açıklama</th>
			<th>Ürün Fiyatı</th>
			<th>Kategori</th>
			<th>Resim</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="values">
	</tbody>
</table>
<div id="loading" class="text-center">
	<div class="spinner-border" role="status">
		<span class="sr-only"></span>
	</div>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProduct">Ürün Ekle</button>
<div class="modal" id="addProduct" tabindex="-1" aria-labelledby="addProductLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Ürün Bilgileri</h1>
            </div>
            <div>
                <div class="modal-body">
                    <input type="text" id="name" class="form-control mb-2" placeholder="Ürün adı" />
                    <input type="text" id="description" class="form-control mb-2" placeholder="Ürün açıklaması" />
                    <input type="text" id="price" class="form-control mb-2" placeholder="Ürün fiyatı" />
                    <input type="file" id="image" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" data-bs-dismiss="modal" id="btnSave">Kaydet</button>
                <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>