﻿@using EntityLayer.Concrete
@model User

@{
    ViewData["Title"] = "Login";
    if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
}

<h1>Login</h1>

<form asp-controller="User" asp-action="Login" method="post">
    <input asp-for="UserName" class="form-control mb-2" placeholder="Adınız" />
    <input type="password" class="form-control mb-2" asp-for="Password" placeholder="Parolanız" />
    <input type="submit" class="btn btn-primary" value="Giriş Yap" />
</form>