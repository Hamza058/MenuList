﻿@using EntityLayer.Concrete
@model User

@{
    ViewData["Title"] = "Login";
    Layout = null;
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.Message
        </div>
    }
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Giriş</title>
    <link rel="icon" type="image/x-icon" href="~/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container col-9 mt-4">
        <div class="row row-fluid-cols-4 justify-content-md-center">
            <form asp-action="Login" method="post">
                <div class="col-lg-auto">
                    <h1>Login</h1>
                </div>
                <div class="col-lg-auto">
                    <input asp-for="UserName" class="form-control mb-2" placeholder="Adınız" />
                </div>
                <div class="col-lg-auto">
                    <input type="password" class="form-control mb-2" asp-for="Password" placeholder="Parolanız" />
                </div>
                <div class="col-lg-auto">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary" value="Giriş Yap" />
                        </div>
                        <div class="col text-end">
                            <a asp-action="Update" class="text-decoration-none text-black">Şifremi Unuttum</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>