﻿@using EntityLayer.Concrete
@model User

﻿@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanıcı Giriş</title>
    <link rel="icon" type="image/x-icon" href="~/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .col-5 {
            box-shadow: 15px 15px 25px 5px #b6b6b6
        }

        .btn-success{
            width: 300px;
        }

        .input_site {
            flex: 0 0 auto;
            width: 35%;
            margin-bottom: 1rem;
        }

        @@media only screen and (max-width: 583px) {
            .col-5 {
                width: 90%;
                box-shadow: 8px 20px 20px 3px #b6b6b6;
            }
            
            .input_site {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    @{
        if (ViewBag.Message != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @ViewBag.Message
            </div>
        }
    }
    <div class="container text-center mt-5">
        <img src="~/logo.png" width="300px" />
        <h2>ADMİN PANELİ GİRİŞ</h2>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="row justify-content-center mt-3">
                <div class="input_site">
                    <input asp-for="UserName" class="form-control mb-3" placeholder="Kullanıcı Adı" />
                    <input type="password" asp-for="Password" class="form-control" placeholder="Parola" />
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-success">Giriş</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>